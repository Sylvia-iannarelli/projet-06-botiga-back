{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}

	<h1 class="mt-5">Modifier le produit
	</h1>

	{{ include('product/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_product_index') }}" class="btn btn-success me-2">Retour à la liste</a>
	{% endif %}

	{% if is_granted('ROLE_PRODUCER') and not is_granted('ROLE_ADMIN') %}
		<a href="{{path('app_store_product_index', {'id':app.user.store.id})}}" class="btn btn-success me-2">Retour à la liste de vos produits</a>
	{% endif %}

	{{ include('product/_delete_form.html.twig') }}

{% endblock %}
