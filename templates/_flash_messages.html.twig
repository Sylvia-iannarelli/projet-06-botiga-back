{# fragment de template pour les Flash Messages #}
{# la convention est de mettre un pr√©fixe "_" au nom du fichier #}
{# @see https://symfony.com/doc/current/templates.html#reusing-template-contents #}

{# read and display all flash messages #}
	{% for label, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert"> {{ message }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}
{% endfor %}
