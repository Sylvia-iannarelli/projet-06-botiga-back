{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur
{% endblock %}

{% block body %}
	<h1 class="mt-5">Modifier le profil</h1>

	{{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_user_index') }}" class="btn btn-success me-2">Retour à la liste</a>
	{% endif %}

	{% if is_granted('ROLE_PRODUCER') and not is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-success me-2">Retour au profil</a>
	{% endif %}

	{% if is_granted('ROLE_ADMIN') %}
		{{ include('user/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
